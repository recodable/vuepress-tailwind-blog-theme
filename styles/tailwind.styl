@tailwind base;

@css {
  .highlight {
    @apply .border-b-2 .border-blue-700;
  }

  .content__default h1 {
    @apply .mt-12 .mb-6 .text-3xl .font-bold .leading-tight;
  }

  .content__default .header-anchor {
    @apply .hidden;
  }

  .content__default h2 {
    @apply .mt-12 .mb-6 .text-2xl .font-bold .leading-tight;
  }

  .content__default a {
    @apply .highlight;
  }

  .content__default a .icon {
    @apply .hidden;
  }

  .content__default p {
    @apply .mb-6;
  }

  .content__default .extra-class pre {
    @apply .rounded-lg;
  }

  .content__default p code  {
    @apply .bg-gray-300 .px-1 .rounded-sm .text-blue-600;
  }

  .newsletter__button {
    @apply .bg-blue-600;
  }

  .newsletter__wrap {
    max-width: 100%;
    @apply .m-0 .w-full;
  }
}

@tailwind components;

@tailwind utilities;
